Scriptname DLC04:DLC04MasterQuestScript extends Quest


; GLOBALS
;///////////////////////////////////////////////////////////////////////////;
Actor PlayerRef
;///////////////////////////////////////////////////////////////////////////;


; PROPERTIES
;///////////////////////////////////////////////////////////////////////////;
Group DefaultPerks
	Perk Property DLC04_PerkSmartGrenade Auto Const Mandatory
{Autofill; This perk lets the Legendary Smart Grenade to work}
	Perk Property DLC04_PerkLuckyRabbitsFoot Auto Const Mandatory
{Autofill; This perk lets the Legendary Lucky Rabbit's Foot to work}
EndGroup
;///////////////////////////////////////////////////////////////////////////;


; EVENTS
;///////////////////////////////////////////////////////////////////////////;
Event OnInit()
	
	; Grab the player.
	PlayerRef = Game.GetPlayer()

	; ADD DEFAULT PERKS
	PlayerRef.addPerk(DLC04_PerkSmartGrenade)
	PlayerRef.addPerk(DLC04_PerkLuckyRabbitsFoot)

EndEvent
;///////////////////////////////////////////////////////////////////////////;
